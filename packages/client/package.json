{
  "name": "@scc/client",
  "version": "0.1.0",
  "description": "Frontend client for Supply Chain Commander",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
