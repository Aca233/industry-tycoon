{
  "name": "@scc/server",
  "version": "0.1.0",
  "description": "Backend server for Supply Chain Commander",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@fastify/websocket": "^11.0.1",
    "@prisma/client": "^6.1.0",
    "@scc/game-core": "workspace:*",
    "@scc/shared": "workspace:*",
    "bullmq": "^5.30.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.1.0",
    "ioredis": "^5.4.1",
    "openai": "^4.76.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^6.1.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}